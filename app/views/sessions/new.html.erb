<%# 1. Flash Messages using Bootstrap Alerts %>
<% flash.each do |type, message| %>
  <div class="alert alert-<%= type == 'notice' ? 'success' : 'danger' %> alert-dismissible fade show" role="alert">
    <%= message %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<div class="card shadow-sm mx-auto mt-5" style="max-width: 400px;">
  <div class="card-body">
    <h3 class="card-title text-center mb-4">UMEAssess Login</h3>

    <%= form_with url: session_path do |form| %>
      <div class="mb-3">
        <%= form.label :username, "OHSU Username", class: "form-label" %>
        <%= form.text_field :username,
            class: "form-control",
            required: true,
            autofocus: true,
            placeholder: "Enter OHSU ID",
            value: params[:username] %>
      </div>

      <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password,
            class: "form-control",
            required: true,
            placeholder: "Password",
            maxlength: 72 %>
      </div>

      <div class="d-grid">
        <%= form.submit "Sign in with LDAP", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
