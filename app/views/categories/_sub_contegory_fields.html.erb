<div class="nested-fields mb-2" data-new-record="<%= f.object.new_record? %>">
  <div class="input-group">
    <%= f.text_field :name, class: "form-control", placeholder: "Sub-category name (e.g. FUND)" %>

    <%= f.hidden_field :_destroy %>

    <button type="button" class="btn btn-outline-danger" data-action="nested-form#remove">
      &times;
    </button>
  </div>
</div>
