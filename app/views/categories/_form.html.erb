<%= turbo_frame_tag dom_id(@category) do %>
  <%= form_with(model: @category, data: { controller: "nested-form" }) do |f| %>

    <div class="card shadow-sm mb-4">
      <div class="card-body">
        <div class="mb-3">
          <%= f.label :name, "Category Name", class: "form-label fw-bold" %>
          <%= f.text_field :name, class: "form-control form-control-lg", placeholder: "e.g. FoM" %>
        </div>

        <hr>
        <h5 class="mb-3">Sub-Categories</h5>

        <div data-nested-form-target="container">
          <%= f.fields_for :sub_categories do |sub_f| %>
            <%= render "sub_category_fields", f: sub_f %>
          <% end %>
        </div>

        <template data-nested-form-target="template">
          <%= f.fields_for :sub_categories, SubCategory.new, child_index: "NEW_RECORD" do |sub_f| %>
            <%= render "sub_category_fields", f: sub_f %>
          <% end %>
        </template>

        <div class="mt-3 d-flex justify-content-between">
          <button type="button" class="btn btn-outline-secondary btn-sm" data-action="nested-form#add">
            + Add Sub-category
          </button>

          <div>
            <%= link_to "Cancel", categories_path, class: "btn btn-link text-muted" %>
            <%= f.submit "Save Category", class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
