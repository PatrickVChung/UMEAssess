<div class="container py-4">
    <div class="row mb-4">
      <div class="col-12">
        <div class="card border-0 shadow-sm bg-primary-subtle text-black p-4 position-relative" style="border-radius: 15px;">
          <div class="position-absolute top-0 end-0 p-3 opacity-75" style="font-size: 1rem;">
                <i class="bi bi-clock-history me-1"></i>
                Last login: <%= user.last_sign_in_at.strftime("%b %d %Y, %H:%M") || "First time!" %>
          </div>

          <div class="d-flex align-items-center mb-3">
            <div class="flex-shrink-0">
              <div class="rounded-circle bg-white text-primary d-flex align-items-center justify-content-center" style="width: 80px; height: 80px; font-size: 2rem; font-weight: bold;">
                <%= user.display_name.first %>
              </div>
            </div>
            <div class="flex-grow-1 ms-4">
              <h2 class="mb-0"><%= welcome_msg %> </h2>
              <p class="opacity-75 mb-0">Student UID: <%= user.sid %> | Current Cohort: <%= user.permission_group.title %></p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row g-4">
      <div class="col-md-6">
        <div class="card h-100 shadow-sm">
          <div class="card-header bg-transparent border-0 pt-3">
            <h5 class="card-title text-muted"><i class="bi bi-person-badge me-2"></i>Personal Details</h5>
          </div>
          <div class="card-body">
            <ul class="list-group list-group-flush">
              <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                <span class="text-secondary">Full Name</span>
                <span class="fw-bold"><%= user.display_name %></span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                <span class="text-secondary">Email</span>
                <span class="fw-bold"><%= user.email %></span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                <span class="text-secondary">Student UID</span>
                <span class="fw-bold"><%= user.sid %></span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                <span class="text-secondary">Current Cohort</span>
                <span class="fw-bold"><%= user.permission_group.title %></span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                <span class="text-secondary">Previous Cohort</span>
                <% if user.prev_permission_group_id.nil? %>
                  <span class="fw-bold"></span>
                <% else %>
                  <span class="fw-bold"><%= PermissionGroup.find_by(id: user.prev_permission_group_id).title %></span>
                <% end %>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                <span class="text-secondary">Program Status</span>
                <span class="fw-bold"><%= user.spec_program %></span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                <span class="text-secondary">Matriculated Date</span>
                <span class="fw-bold"><%= user.matriculated_date %></span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                <span class="text-secondary">Matriculated Date</span>
                <span class="fw-bold"><%= user.new_competency ? 'Yes' : 'No' %></span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                <span class="text-secondary">Specialties Interest</span>
                <span class="fw-bold"><%= user.career_interest.flatten %></span>
              </li>


            </ul>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="card h-100 shadow-sm">
          <div class="card-header bg-transparent border-0 pt-3">
            <h5 class="card-title text-muted"><i class="bi bi-rocket-takeoff me-2"></i>Quick Actions/View Datasets</h5>
          </div>
          <div class="card-body d-grid gap-2">
              OASIS Access <br />
              Upload New Artifacts(s)<br />
              View Artifacts<br />
              Clinical Datasets<br />
              FoM Blocks<br>

          </div>
        </div>
      </div>
    </div>

</div>
