<div class="container py-4">

    <div class="row mb-4">
      <div class="col-12">
        <div class="card border-0 shadow-sm bg-primary-subtle text-black p-4 position-relative" style="border-radius: 15px;">
          <div class="position-absolute top-0 end-0 p-3 opacity-75" style="font-size: 1rem;">
                <i class="bi bi-clock-history me-1"></i>
                Last login: <%= Current.user.last_sign_in_at&.strftime("%b %d %Y, %H:%M") || "First time!" %>
          </div>

          <div class="d-flex align-items-center mb-3">
            <div class="flex-shrink-0">
              <div class="rounded-circle bg-white text-primary d-flex align-items-center justify-content-center" style="width: 80px; height: 80px; font-size: 2rem; font-weight: bold;">
                <%= Current.user.display_name.first %>
              </div>
            </div>
            <div class="flex-grow-1 ms-4">
              <h2 class="mb-0">Welcome back, <%= Current.user.display_name %>!</h2>
              <p class="opacity-75 mb-0">With Dean Privileges</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row g-4">
      <div class="col-md-6">
        <div class="card h-100 shadow-sm">
          <div class="card-header bg-transparent border-0 pt-3">
            <h5 class="card-title text-muted"><i class="bi bi-person-badge me-2"></i>Personal Details</h5>
          </div>
          <div class="card-body">
            <ul class="list-group list-group-flush">
              <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                <span class="text-secondary">Full Name</span>
                <span class="fw-bold"><%= Current.user.display_name %></span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                <span class="text-secondary">Email</span>
                <span class="fw-bold"><%= Current.user.email %></span>
              </li>

              <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                <span class="text-secondary">Permission Group</span>
                <span class="fw-bold"><%= Current.user.permission_group.title %></span>
              </li>

              <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                <span class="text-secondary">Program Status</span>
                <span class="fw-bold"><%= Current.user.spec_program %></span>
              </li>

              <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                <span class="text-secondary">Email Notification</span>
                <span class="fw-bold"><%= Current.user.subscribed ? 'Yes' : 'No' %></span>
              </li>

            </ul>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="card h-100 shadow-sm">
          <div class="card-header bg-transparent border-0 pt-3">
            <h5 class="card-title text-muted"><i class="bi bi-rocket-takeoff me-2"></i>Quick Actions/View Datasets</h5>
          </div>
          <div class="card-body d-grid gap-2">
            OASIS Access <br />
            <%= link_to 'Upload Documents', new_artifact_path, class: "btn btn-primary" %><br />
            Medhub <br>
            Course Catalog <br>
            Process FoM <br>
            EG Review <br>
            Report <br>
            WBA Graph/Report <br>


            <button class="btn btn-outline-secondary d-flex align-items-center justify-content-between">
              View Transcript <i class="bi bi-chevron-right"></i>
            </button>
          </div>
        </div>
      </div>
    </div>

  <!-- Lower Section -->
  <div class="row g-3">
    <div class="col-lg-8">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-white">
          <strong>Recent Activity</strong>
        </div>
        <div class="card-body">
          <p class="text-muted">No recent activity yet.</p>
        </div>
      </div>
    </div>

    <div class="col-lg-4">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-white">
          <strong>Quick Actions</strong>
        </div>
        <div class="card-body">
          <div class="d-grid gap-2">
            <%#= link_to "Create Assessment", new_assessment_path, class: "btn btn-primary" %>
            <%#= link_to "Manage Users", users_path, class: "btn btn-outline-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
